<header class="site-header">
  <div class="container-fluid">
    <%= link_to image_tag("logo2.png", class: "hidden-md-down"), root_path, {class: "site-logo"} %>

    <div class="site-header-content">
      <div class="site-header-content-in">
        <div class="site-header-shown">
          <% if logged_in? %>
          <% end %>

          <div class="dropdown user-menu">
            <button class="dropdown-toggle" id="dd-user-menu" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <img src="/assets/avatar264.png" alt="">
            </button>

            <% if logged_in? %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                  <%= link_to teacher_path(current_teacher), class: "dropdown-item" do %>
                  <span class="font-icon glyphicon glyphicon-user"></span>Profile
                  <% end %>
                  <%= link_to edit_teacher_path(current_teacher), class: "dropdown-item" do %>
                  <span class="font-icon glyphicon glyphicon-cog"></span>Settings
                  <% end %>
                  <a class="dropdown-item" href="#"><span class="font-icon glyphicon glyphicon-question-sign"></span>Help</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="/logout"><span class="font-icon glyphicon glyphicon-log-out"></span>Logout</a>
                </div>
            <% else %>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dd-user-menu">
                  <a class="dropdown-item" href="/signup"><span class="font-icon glyphicon glyphicon-user"></span>Registrarse</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="/login"><span class="font-icon glyphicon glyphicon-log-out"></span>Login</a>
                </div>
            <% end %>
          </div> <!-- user menu -->
        </div><!--.site-header-shown-->
        <div class="mobile-menu-right-overlay"></div>
        <div class="site-header-collapsed">
          <div class="site-header-collapsed-in">
            <div class="site-header-search-container">

              <div class="typeahead-container">
                <div class="typeahead-field">
									<span class="typeahead-query">
										<input id="typeahead-search-bar"
                           class="typeahead form-control"
                           name="q"
                           type="text"
                           autocomplete="off">
									</span>
									<span class="typeahead-button">
										<button type="submit">
                      <span class="font-icon-search"></span>
                    </button>
									</span>
                </div>
                <div class="typeahead-result"></div>
              </div>
            </div>
          </div><!--.site-header-collapsed-in-->
        </div><!--.site-header-collapsed-->



      </div><!--site-header-content-in-->
    </div><!--.site-header-content-->
  </div><!--.container-fluid-->
</header><!--.site-header-->
