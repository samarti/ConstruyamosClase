<div class="page-content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-3">
        <section class="box-typical">
          <div class="document-card">
            <div class="document-card-image"><%= image_tag("pdf_icon.png") %></div>
            <div class="document-card-title"><%=@document.name%></div>
            <div class="document-card-owner"><%=@document.teacher.full_name%></div>
            <div class="document-card-owner-mail"><%=@document.teacher.email%></div>
            <button class="btn btn-rounded" type="button" name="button">Descargar</button>
          </div>
          <div class="document-statistic tbl">
            <div class="tbl-row">
              <div class="tbl-cell">
                <b><%=@document.getStars%></b><br>Estrellas
              </div>
              <div class="tbl-cell">
                <b><%=@document.ratings.count%></b><br>
                <% if @document.ratings.count < 2 %>Comentario
                <% else %> Comentarios
                <% end %>
              </div>
            </div>
          </div>
          <div class="tag-container">
            <div class="tag"><%=@document.levels.first.name%></div>
            <div class="tag">Manuel Montt</div>
            <div class="tag"><%=@document.subjects.first.name%></div>
            <div class="tag">Héroe Chileno</div>
          </div>
        </div>
      </section>

      <div class="col-sm-9">
        <section class="box-typical">
          <header class="box-typical-header-sm">Descripción</header>
          <p class="document-info-item">
            <%= @document.description %>
          </p>
        </section>
        <div class="row document-evaluation">

          <div class="col-sm-10">
            <section class="box-typical">
              <textarea rows="5" class="form-control" placeholder="Comenta" data-autosize="" style="overflow: hidden; word-wrap: break-word; height: 130px;"></textarea>
            </section>
          </div>

          <div class="col-sm-2">
            <section class="card">
              <header class="card-header">Evalúa</header>
              <div class="card-block">
                <span class="font-icon font-icon-star"></span>
                <select id="stars-select" class="form-control">
                  <option>1</option>
                  <option>2</option>
                  <option>3</option>
                  <option>4</option>
                  <option>5</option>
                </select>
              </div>
            </section>
          </div>

        </div>

        <section class="box-typical">
          <header class="box-typical-header-sm">Comentarios</header>
          <article class="comment-list-item">

            <header class="comment-list-header">
              <div class="user-card-row">
                <div class="tbl-row">

                  <div class="tbl-cell tbl-cell-photo">
                    <a href="#" tabindex="0">
                      <%= image_tag @document.ratings.first.teacher.profile_picture %>
                    </a>
                  </div>

                  <div class="tbl-cell">
                    <p class="user-card-row-name"><a href="#" tabindex="0"><%=@document.ratings.first.teacher.first_name%></a></p>
                    <p class="user-card-row-status"><a href="#" tabindex="0"><%=@document.ratings.first.teacher.email%></a></p>
                  </div>

                </div>
              </div>
            </header>

            <div class="text-block text-block-typical">
              "<%= @document.ratings.first.comment%>"
            </div>

          </article>
        </section>

      </div>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_document_path(@document) %> |
<%= link_to 'Back', documents_path %>
